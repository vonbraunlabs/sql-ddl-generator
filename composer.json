{
    "name": "vonbraunlabs/sql-ddl-generator",
    "authors": [
        {
            "name": "Diogo Oliveira de Melo",
            "email": "melo@vonbraunlabs.com.br"
        }
    ],
    "require": {
        "php": "^7.0|^8.0"
    },
    "config": {
        "platform": {
            "php": "7.1.0"
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "src/"
        ]
    },
    "bin": [
        "sql-ddl-generator"
    ],
    "scripts":  {
        "cs": "vendor/bin/phpcs --standard=PSR2 src/",
        "phpstan": "vendor/bin/phpstan analyse src/ -l 5"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.2",
        "phpstan/phpstan": "^0.9.1"
    }
}
